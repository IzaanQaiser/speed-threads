{
  "name": "speed-threads",
  "version": "1.0.0",
  "description": "AI-powered social media thread summarization",
  "private": true,
  "workspaces": [
    "frontend",
    "chrome-extension"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "install:all": "npm install && npm install --workspace=frontend",
    "start:backend": "cd backend && python -m uvicorn src.main:app --reload",
    "setup": "npm run install:all && cd backend && pip install -r requirements.txt"
  },
  "keywords": [
    "chrome-extension",
    "reddit",
    "twitter",
    "ai",
    "summarization",
    "gpt-oss"
  ],
  "author": "Izaan Qaiser",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IzaanQaiser/speed-threads.git"
  }
}
